<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>envisaje</artifactId>
		<groupId>imagej.envisaje</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<artifactId>IJPluginsLoader</artifactId>
	<packaging>nbm</packaging>

	<name>IJPluginsLoader</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<repositories>
        <!--
        Repository hosting NetBeans modules, especially APIs.
        Versions are based on IDE releases, e.g.: RELEASE691
        To create your own repository, use: nbm:populate-repository
        -->
	</repositories>

	<dependencies>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-netbeans-api-annotations-common</artifactId>
			<version>${netbeans.version}</version>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-openide-modules</artifactId>
			<version>${netbeans.version}</version>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-openide-util</artifactId>
			<version>RELEASE70-BETA2</version>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-openide-filesystems</artifactId>
			<type>jar</type>
			<version>${netbeans.version}</version>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-openide-loaders</artifactId>
			<version>${netbeans.version}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<artifactId>org-openide-dialogs</artifactId>
			<groupId>org.netbeans.api</groupId>
			<type>jar</type>
			<version>${netbeans.version}</version>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-openide-awt</artifactId>
			<version>RELEASE70-BETA2</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-openide-io</artifactId>
			<version>${netbeans.version}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij-plugin</artifactId>
			<version>2.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij-plugin-swing</artifactId>
			<version>2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>Utils-Output</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij-core</artifactId>
			<version>2.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij-platform</artifactId>
			<version>2.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij</artifactId>
			<version>1.44o</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij-core-plugins</artifactId>
			<version>2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij-display</artifactId>
			<version>2.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij-awt-common</artifactId>
			<version>2.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij-tool</artifactId>
			<version>2.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>imagej</groupId>
			<artifactId>ij-ui</artifactId>
			<version>2.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<artifactId>org-openide-windows</artifactId>
			<groupId>org.netbeans.api</groupId>
			<type>jar</type>
			<version>RELEASE70-BETA2</version>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-openide-util-lookup</artifactId>
			<version>RELEASE70-BETA2</version>
		</dependency>
		<dependency>
			<groupId>org.netbeans.api</groupId>
			<artifactId>org-netbeans-modules-settings</artifactId>
			<version>RELEASE70-BETA2</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>nbm-maven-plugin</artifactId>
				<version>3.5</version>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
                    <!-- to have the jar plugin pickup the nbm generated manifest -->
					<useDefaultManifestFile>true</useDefaultManifestFile>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
